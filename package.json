{
  "name": "hack-a-mole",
  "version": "1.0.0",
  "description": "Group Project",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*' server.js\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmalm79/hack-a-mole.git"
  },
  "keywords": [
    "hack-a-mole"
  ],
  "author": "Drew, Nej, Levi, Josh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmalm79/hack-a-mole/issues"
  },
  "homepage": "https://github.com/jmalm79/hack-a-mole#readme",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.12.9",
    "react-share": "^4.4.0",
    "react-table": "^7.7.0"
  }
}
